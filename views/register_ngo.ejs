<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <form action="/users/register_ngo" method="POST">
          <div class="form-group">
            <label for="ngoname">Ngo Name</label>
            <input
              type="name"
              id="ngoname"
              name="ngoname"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="ngo_no">Ngo number</label>
            <input
              type="number"
              id="ngo_no"
              name="ngo_no"
              class="form-control"
              placeholder="Enter ngo number"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="tax_exemption">Tax exemption</label>
            <input
              type="number"
              id="tax_exemption"
              name="tax_exemption"
              class="form-control"
              placeholder="Enter tax exemption number"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login_ngo">Login</a></p>
      </div>
    </div>
  </div>